<%= form_tag :reservations, :class => 'form-horizontal', :method => :post do %>
  <div class="form-group">
    <label for="tableDD" class="col-sm-2 control-label">Table</label>
    <div class="col-sm-3">
      <select class="form-control" name="table_id" id="tableDD" required>
        <% @tables.each do |table| %>
            <option value="<%= table.id %>" <% if params[:table_id] == table.id.to_s %>selected<% end %>><%= table.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class='form-group'>
    <label for='dateInput' class='col-sm-2 control-label'>Date</label>
    <div class='col-sm-3'>
      <input type='date' name="date" class="form-control" id="dateInput" placeholder="date" required>
    </div>
  </div>
  <div class="form-group">
    <label for="startTimeInput" class="col-sm-2 control-label">Start time</label>
    <div class="col-sm-3">
      <input type="time" name="start_time" class="form-control" id="startTimeInput" required>
    </div>
  </div>
    <div class="form-group">
      <label for="endTimeInput" class="col-sm-2 control-label">End time</label>
      <div class="col-sm-3">
        <input type="time" name="end_time" class="form-control" id="endTimeInput" required>
      </div>
    </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-3">
      <button type="submit" class="btn btn-primary">Reserve</button>
    </div>
  </div>
<% end %>